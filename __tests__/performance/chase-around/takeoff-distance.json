{
  "kind": "chase around",
  "version": "1.0",
  "project": {
    "src": "./da40-takeoff-distance.wpd.json"
  },
  "guides": {
    "headwindComponentCorrection": {
      "flow": "right"
    },
    "obstacleHeightCorrection": {
      "flow": "right"
    },
    "tailwindComponentCorrection": {
      "flow": "right"
    },
    "weightCorrection": {
      "flow": "right"
    }
  },
  "scales": {
    "outsideAirTemperature": {
      "flow": "up",
      "unit": "degrees celsius"
    },
    "pressureAltitude": {
      "flow": "right",
      "unit": "feet"
    },
    "weight": {
      "flow": "up",
      "unit": "kilograms"
    },
    "windComponent": {
      "flow": "up",
      "unit": "knots"
    },
    "obstacleHeight": {
      "flow": "up",
      "unit": "meters"
    },
    "takeoffDistance": {
      "flow": "right",
      "unit": "meters"
    }
  },
  "steps": [
    {
      "chase": "pressureAltitude",
      "until": "outsideAirTemperature"
    },
    {
      "chase": "right"
    },
    {
      "chase": "weightCorrection",
      "until": "weight"
    },
    {
      "chase": "right"
    },
    {
      "chase": {
        "windComponent >= 0": "headwindComponentCorrection",
        "windComponent < 0": "tailwindComponentCorrection"
      },
      "until": "windComponent"
    },
    {
      "chase": "right"
    },
    {
      "chase": "obstacleHeightCorrection",
      "until": "obstacleHeight"
    },
    {
      "chase": "right"
    },
    {
      "solve": "takeoffDistance"
    }
  ]
}
